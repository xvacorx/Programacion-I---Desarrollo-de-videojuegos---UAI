//9. Ingresar un número de mes e informar la cantidad de días que posee el mismo.
//Para simplificar el problema, asumiremos que no trabajamos con años bisiestos,
//o sea, consideraremos que febrero siempre tiene 28 días

Console.WriteLine("Ingrese un número de mes (1-12):");
int mes = int.Parse(Console.ReadLine());

if (mes == 1 || mes == 3 || mes == 5 || mes == 7 || mes == 8 || mes == 10 || mes == 12) {Console.WriteLine("El mes ingresado tiene 31 días."); }

else if (mes == 4 || mes == 6 || mes == 9 || mes == 11) {Console.WriteLine("El mes ingresado tiene 30 días."); }

else if (mes == 2) {Console.WriteLine("El mes ingresado tiene 28 días."); }

else {Console.WriteLine("Número de mes inválido."); }
