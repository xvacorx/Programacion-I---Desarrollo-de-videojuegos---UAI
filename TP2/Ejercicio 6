//6. Ingresar la edad y la altura de dos personas, indicar e imprimir la estatura del de mayor edad

Console.WriteLine("Ingrese edad de la persona:");
int Edad1 = int.Parse(Console.ReadLine());

Console.WriteLine("Ingrese altura de la persona:");
float Altura1 = float.Parse(Console.ReadLine());

Console.WriteLine("Ingrese edad de la segunda persona:");
int Edad2 = int.Parse(Console.ReadLine());

Console.WriteLine("Ingrese altura de la segunda persona:");
float Altura2 =  float.Parse(Console.ReadLine());

if (Edad1 > Edad2) {
    Console.WriteLine("La primer persona es más grande, y mide: " + Altura1 + " Mts"); }

else if (Edad1 < Edad2) {
    Console.WriteLine("La segunda persona es más grande, y mide: " + Altura2 + " Mts"); }

else { 
    Console.WriteLine("Ambas personas tienen la misma edad"); }
