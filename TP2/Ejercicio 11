//11. Ingresar las horas trabajadas por un empleado y su categoría,
//calcular su sueldo sabiendo que los empleados de la categoría 1 cobran $50,
//la 2 cobra $ 70 y la 3 cobra $ 80

Console.WriteLine("Ingrese categoría del empleado:");
int Categoria = int.Parse(Console.ReadLine());

Console.WriteLine("Ingrese horas trabajadas del empleado:");
int Horas = int.Parse(Console.ReadLine());

int Sueldo = 0;

if (Categoria == 1)
{
    Sueldo = 50;
}
else if (Categoria == 2)
{
    Sueldo = 70;
}
else if (Categoria == 3)
{
    Sueldo = 80;
}

Console.WriteLine("El sueldo del empleado es de: " + Sueldo);


-------- Alternativo ----------

Console.WriteLine("Ingrese categoría del empleado:");
int Categoria = int.Parse(Console.ReadLine());

Console.WriteLine("Ingrese horas trabajadas del empleado:");
int Horas = int.Parse(Console.ReadLine());

int Cat = 0;

if (Categoria == 1)
{
    Cat = 50;
}
else if (Categoria == 2)
{
    Cat = 70;
}
else if (Categoria == 3)
{
    Cat = 80;
}

int Sueldo = Cat * Horas;

Console.WriteLine("El sueldo del empleado es de: " + Sueldo);
